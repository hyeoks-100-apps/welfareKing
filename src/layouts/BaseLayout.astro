---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = '복지정보.com',
  description = '복지정보.com - 지원금/생활경제 정보 아카이브',
} = Astro.props;
---

<!doctype html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body>
    <div class="mx-auto min-h-screen w-full max-w-6xl px-4 py-8 sm:px-6 lg:px-8">
      <slot />
    </div>
  </body>
</html>
