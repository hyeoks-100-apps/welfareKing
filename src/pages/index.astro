---
import BaseLayout from '../layouts/BaseLayout.astro';
import SiteHeader from '../components/SiteHeader.astro';
import PostCard from '../components/PostCard.astro';
import { getDeadlineLabel } from '../lib/deadline';
import { href } from '../lib/href';
import { getAllPosts } from '../lib/posts';

const posts = getAllPosts();
const publishedPosts = getAllPosts({ includeDrafts: false });
const latestPosts = posts.slice(0, 12);

const urgentPosts = posts
  .filter((post) => {
    const label = getDeadlineLabel(post.applicationPeriod?.end);
    return label?.kind === 'soon' || label?.kind === 'today';
  })
  .sort((a, b) => {
    const aEnd = a.applicationPeriod?.end ?? '9999-99-99';
    const bEnd = b.applicationPeriod?.end ?? '9999-99-99';
    return aEnd.localeCompare(bEnd);
  })
  .slice(0, 12);

const tagCount = new Map<string, number>();
for (const post of publishedPosts) {
  for (const tag of post.tags) {
    tagCount.set(tag, (tagCount.get(tag) ?? 0) + 1);
  }
}

const topTags = [...tagCount.entries()]
  .sort((a, b) => b[1] - a[1])
  .slice(0, 12)
  .map(([tag]) => tag);
---

<BaseLayout
  title="복지정보.com | 최신 복지 정보"
  description="최신 지원금/복지 혜택 정보를 빠르게 확인하세요."
  canonicalPath="/"
  ogType="website"
>
  <SiteHeader />

  <section class="space-y-2 pb-4">
    <h1 class="text-2xl font-bold text-slate-900 sm:text-3xl">최신 글</h1>
    <p class="text-sm text-slate-600">최신 지원금·생활 정보를 빠르게 확인해 보세요.</p>
  </section>

  <section class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
    {latestPosts.map((post) => <PostCard post={post} />)}
  </section>

  <section class="mt-12 space-y-3">
    <h2 class="text-xl font-bold text-slate-900">마감 임박</h2>
    {
      urgentPosts.length > 0 ? (
        <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
          {urgentPosts.map((post) => <PostCard post={post} />)}
        </div>
      ) : (
        <p class="rounded-xl border border-dashed border-slate-300 bg-white p-4 text-sm text-slate-500">
          마감 임박 글이 없어요
        </p>
      )
    }
  </section>

  <section class="mt-12 space-y-3">
    <h2 class="text-xl font-bold text-slate-900">인기 태그</h2>
    <div class="flex flex-wrap gap-2">
      {
        topTags.map((tag) => (
          <a
            href={`${href('/search/')}?tag=${encodeURIComponent(tag)}`}
            class="rounded-full bg-slate-100 px-3 py-1.5 text-sm font-semibold text-slate-700 hover:bg-slate-200"
          >
            #{tag}
          </a>
        ))
      }
    </div>
  </section>
</BaseLayout>
