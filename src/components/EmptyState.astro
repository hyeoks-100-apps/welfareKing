---
import { href } from '../lib/href';

interface Props {
  title: string;
  description?: string;
  actionLabel?: string;
  actionHref?: string;
}

const { title, description, actionLabel, actionHref } = Astro.props;
const actionUrl = actionHref ? href(actionHref) : undefined;
---

<section class="rounded-2xl border border-slate-200 bg-slate-50 p-6 text-center shadow-sm">
  <h2 class="text-lg font-semibold text-slate-900">{title}</h2>
  {description && <p class="mt-2 text-sm text-slate-600">{description}</p>}
  {actionLabel && actionUrl && (
    <a
      href={actionUrl}
      class="mt-4 inline-flex rounded-lg bg-slate-900 px-4 py-2 text-sm font-semibold text-white transition hover:bg-slate-700"
    >
      {actionLabel}
    </a>
  )}
</section>
