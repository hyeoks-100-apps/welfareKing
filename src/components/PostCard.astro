---
import { formatDate } from '../lib/date';
import { getDeadlineLabel } from '../lib/deadline';
import { href } from '../lib/href';
import { imgVersion } from '../lib/imgVersion';
import type { Post } from '../lib/postSchema';

interface Props {
  post: Post;
}

const { post } = Astro.props;
const deadline = getDeadlineLabel(post.applicationPeriod?.end);
const thumbnailVersion = imgVersion(post);
const thumbnailSrc = `${href(post.thumbnail)}${thumbnailVersion ? `?v=${thumbnailVersion}` : ''}`;

const deadlineClassByKind = {
  expired: 'bg-slate-100 text-slate-600',
  today: 'bg-rose-100 text-rose-700',
  soon: 'bg-amber-100 text-amber-700',
  none: 'bg-slate-100 text-slate-600',
};
---

<article class="group overflow-hidden rounded-2xl border border-slate-200 bg-white shadow-sm transition hover:-translate-y-0.5 hover:shadow-md">
  <img
    src={thumbnailSrc}
    alt={post.title}
    class="h-44 w-full rounded-t-2xl object-cover"
    loading="lazy"
  />
  <div class="space-y-3 p-4">
    <div class="flex items-start justify-between gap-2">
      <h3 class="line-clamp-2 text-lg font-semibold text-slate-900">{post.title}</h3>
      <div class="flex shrink-0 flex-col items-end gap-1">
        {post.benefit.amountText && (
          <span class="rounded-full bg-emerald-50 px-2 py-0.5 text-[11px] font-semibold text-emerald-700">
            {post.benefit.amountText}
          </span>
        )}
        {deadline && (
          <span class:list={[
            'rounded-full px-2 py-0.5 text-[11px] font-semibold',
            deadlineClassByKind[deadline.kind],
          ]}>
            {deadline.text}
          </span>
        )}
      </div>
    </div>
    <p class="line-clamp-2 text-sm text-slate-600">{post.summary}</p>
    <p class="text-xs text-slate-500">{formatDate(post.publishedAt)}</p>
    <a
      href={href(`/p/${post.slug}/`)}
      class="inline-flex text-sm font-semibold text-sky-700 underline-offset-4 group-hover:underline"
    >
      ... 더보기
    </a>
  </div>
</article>
